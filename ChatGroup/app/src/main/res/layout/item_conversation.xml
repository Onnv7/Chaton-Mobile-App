<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rimv_image_conversation_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/avatar_sontung"
        app:riv_corner_radius="90dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_group_name_conversation_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sơn Tùng MTP"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_group_latest_msg_conversation_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello An - 18:20"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>