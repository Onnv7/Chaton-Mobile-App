<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADFF0606"
    tools:context=".activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="323dp">

            <!-- Nội dung của ConstraintLayout -->

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="308dp"
                android:layout_height="225dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/chat_illustration" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Register a new account"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_rounded_top_rectangle"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_name_register_act"
                style="@style/register_edt_style"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edt_email_register_act"
                style="@style/register_edt_style"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edt_password_register_act"
                style="@style/register_edt_style"
                android:layout_marginTop="12dp"
                android:drawableEnd="@drawable/icon_visibility_off"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingEnd="12dp" />

            <EditText
                android:id="@+id/edt_re_password_register_act"
                style="@style/register_edt_style"
                android:layout_marginTop="12dp"
                android:drawableEnd="@drawable/icon_visibility_off"
                android:ems="10"
                android:hint="Re-Password"
                android:inputType="textPassword"
                android:paddingEnd="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="Gender:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rdog_gender_register_act"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdo_male_register_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|fill_horizontal"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        style="@style/radio_style"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/rdo_female_register_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        style="@style/radio_style"
                        android:text="Female" />
                </RadioGroup>
            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_agree_register_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:button="@null"
                android:drawableStart="@drawable/selector_check_option"
                android:text=" I Agree With The Terms And Conditions" />

            <Button
                android:id="@+id/btn_sign_up_register_act"
                style="@style/button_red_rounded"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="Sign up"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have an account? "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_login_register_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Login"
                    android:textColor="@color/red_pink"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
