<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatGroup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="grey_edt_style">
        <item name="android:background">@drawable/login_edt_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="button_red_rounded">
        <item name="background">@color/primary_color</item>
        <item name="cornerRadius">35dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="register_edt_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <!--        <item name="android:background">@null</item>-->
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/register_edt_background</item>
        <item name="android:paddingStart">12dp</item>
        <!--        <item name="android:background">#f00</item>-->
    </style>

    <style name="radio_style">
        <item name="android:button">@null</item>
        <item name="android:drawableStart">@drawable/selector_radio_checked_option</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.ChatGroup.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ChatGroup.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChatGroup.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>